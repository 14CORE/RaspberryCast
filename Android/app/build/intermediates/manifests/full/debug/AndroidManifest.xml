<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="raspberrycast.kiwiidev.com.raspberrycast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kiwiidev.raspberrycast.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="raspberrycast.kiwiidev.com.raspberrycast.remote"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="raspberrycast.kiwiidev.com.raspberrycast.pause"
            android:label="@string/title_activity_pause" >
        </activity>

        <service
            android:name="com.kiwiidev.raspberrycast.notif"
            android:enabled="true"
            android:label="@string/title_activity_notif" >
        </service>
    </application>

</manifest>